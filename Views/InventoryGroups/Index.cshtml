@model IEnumerable<Core.Models.InventoryGroup>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.InventoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryAreaId)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <a href=""> @Html.DropDownListFor(modelItem => item.InventoryId, (IEnumerable<SelectListItem>)ViewBag.inventorys,new {disabled="disabled"})</a>
            </td>
            <td>
                @Html.DropDownListFor(modelItem => item.DeliveryAreaId, (IEnumerable<SelectListItem>)ViewBag.deliveryAreas,new {disabled="disabled"})
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
