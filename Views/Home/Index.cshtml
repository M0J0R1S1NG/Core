

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        
        
        <div class="item active">
            <img src="~/images/page1.jpg" alt="Dubes" class="img-responsive img-carousel"/>
            <div class="carousel-caption" role="option">
                    @await Html.PartialAsync("_HomeButtons")
                <p>
                   Welcome to UberDuber 24 Toronto Delivery Network
                    <a class="btn btn-default" href="Shopping">
                        If your already registered go stright to the shop
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/page2.jpg" alt="Uber Duber" class="img-responsive img-carousel"/>
            <div class="carousel-caption" role="option">
                <p>
                   Want to know if your ready for instant delivery 
                    <a class="btn btn-default" href="Delivery">
                        Check your address here
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/page3.jpg" alt="Fields" class="img-responsive img-carousel"  0/>
            <div class="carousel-caption" role="option">
                <p>
                    Ready to order  
                    <a class="btn btn-default" href="Account/Register">
                       Sign up and we'll be at your door in minutes'
                    </a>
                     
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/page5.jpg" alt="green" class="img-responsive img-carousel"/>
            <div class="carousel-caption" role="option">
                <p>
                    Dedicated to 24 hour service check our systems status for service levels
                    <a class="btn btn-default" href="SystemStatus">
                        Check System Status
                    </a>
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



