@using Microsoft.AspNetCore.Identity
@using Core.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" textsize=4> @User.Identity.Name</a>
            </li>
           
             <li valign=center>
                <a asp-area="" asp-controller="Shopping" asp-action="Index" title="MyCart" textsize=4> Cart</a>
            </li>
            <li valign=center>
                <a asp-area="" asp-controller="Orders" asp-action="Index" title="MyOrders" textsize=4> Orders</a>
            </li>
            <li>
                <button textsize=4 type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
        <li valign=center>
            <IMG alt="Cart" src="/images/30px-Canada_Weed_Flag.png" />
        </li>
    </ul>
}
